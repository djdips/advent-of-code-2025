{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",           // <- ES modules required for import.meta
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "outDir": "./dist",
    "rootDir": "./ts",
  },
  "include": ["ts/**/*"],
  "exclude": ["dist"]
}
